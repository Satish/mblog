%h1 Sign up as a new user
- @user.password = @user.password_confirmation = nil

= error_messages_for :user
- form_for :user, :url => register_path do |f|
  .formRow
    = f.label :login
    = f.text_field :login, :class => "fieldWidth"
  .formRow
    = f.label :email
    = f.text_field :email, :class => "fieldWidth"
  .formRow
    = f.label :password
    = f.password_field :password, :class => "fieldWidth"
  .formRow
    = f.label :password_confirmation, 'Confirm Password'
    = f.password_field :password_confirmation, :class => "fieldWidth"
  .formRow
    = f.submit 'Sign Up', :class => "buttonLink"