%h1 Log In

- form_tag session_path do
  .formRow
    = label_tag 'login'
    = text_field_tag 'login', @login, :class => "fieldWidth"
  .formRow
    = label_tag 'password'
    = password_field_tag 'password', nil, :class => "fieldWidth"
  .formRow
    = check_box_tag 'remember_me', '1', @remember_me, :style => "float:left; margin-right: 10px;"
    = label_tag 'remember_me', 'Remember me'
  .formRow
    = "...or use:"
  .formRow
    = label_tag 'openid_identifier', 'OpenID:'
    = text_field_tag "openid_identifier"
  .formRow
    = submit_tag 'Sign in', :disable_with => "Signing in&hellip;", :class => "buttonLink"